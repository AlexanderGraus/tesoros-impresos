<div class="container" style="margin-top: 10vh;">
    <div class="row">
        <div class="col-12">
            <h4>Tus Citas</h4>
            <div class="col-4 m-3">
                <a class="btn btn-primary" href="/admin/citas/alta">Agregar Cita</a>

            </div>
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                    <th>Autor</th>
                    <th>Cita</th>
                    <th>Libro</th>
                    <th></th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each citas}}
                    <tr>
                        <td>{{autor}}</td>
                        <td>{{cita}}</td>
                        <td>{{libro}}</td>
                        <td><a href="">Editar</a></td>
                        {{!-- tengo mandarle el id para saber cual debe borrar --}}
                        {{!-- ruta: /admin/baja/id --}}
                        <td><a href="baja/{{id}}">Borrar</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>